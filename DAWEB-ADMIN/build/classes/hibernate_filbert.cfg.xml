<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="filbert">
  <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
  <property name="hibernate.connection.url">jdbc:sqlserver://filbert;databaseName=AI2Replication;</property>
  <property name="hibernate.connection.username">api</property>
  <property name="hibernate.connection.password">Digital1</property>
  <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
  <property name="hibernate.connection.pool_size">100</property>
  <property name="show_sql">true</property>

  <mapping resource="au/gov/nsw/records/digitalarchive/ORM/Agencies.hbm.xml"/>
  
 </session-factory>
</hibernate-configuration>
